generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  xUsername     String?   @unique
  xUserId       String?   @unique

  accounts         Account[]
  sessions         Session[]
  tweets           Tweet[]
  scheduledPosts   ScheduledPost[]
  notifications    Notification[]
  fcmTokens        FcmToken[]
  instagramAccount InstagramAccount?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Tweet {
  id            String   @id @default(cuid())
  tweetId       String   @unique  // Twitter's tweet ID
  userId        String
  text          String   @db.Text
  authorName    String
  authorUsername String
  authorImage   String?
  mediaUrls     String[] // Array of media URLs if any
  likeCount     Int      @default(0)
  retweetCount  Int      @default(0)
  replyCount    Int      @default(0)
  createdAt     DateTime // When the tweet was created on Twitter
  fetchedAt     DateTime @default(now())

  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  scheduledPosts ScheduledPost[]

  @@index([userId])
}

model ScheduledPost {
  id              String     @id @default(cuid())
  userId          String
  tweetId         String
  scheduledFor    DateTime
  theme           Theme      @default(SHINY_PURPLE)
  status          PostStatus @default(PENDING)
  postType        PostType   @default(STORY)
  screenshotUrl   String?    // Cloudinary URL after processing
  previewUrl      String?    // Temporary preview URL
  errorMessage    String?
  notifiedAt      DateTime?
  instagramPostId String?    // Instagram post ID after publishing (for POST type)
  postedAt        DateTime?  // When actually posted to Instagram

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  tweet Tweet @relation(fields: [tweetId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([scheduledFor])
  @@index([status])
  @@index([postType])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      NotificationType
  title     String
  body      String
  imageUrl  String?
  postId    String?  // Reference to ScheduledPost if applicable
  read      Boolean  @default(false)
  sentAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model FcmToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  deviceInfo String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model InstagramAccount {
  id              String   @id @default(cuid())
  userId          String   @unique
  instagramUserId String
  username        String
  accessToken     String   @db.Text // Encrypted long-lived token
  tokenExpiresAt  DateTime
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum Theme {
  SHINY_PURPLE
  MANGO_JUICE
}

enum PostStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum NotificationType {
  POST_READY
  POST_FAILED
  REMINDER
}

enum PostType {
  STORY
  POST
}
